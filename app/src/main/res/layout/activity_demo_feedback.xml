<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp">

   <com.pasc.lib.widget.feedback.FeedbackView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
       customview:img="@drawable/feedback_result"
       customview:titleText="操作成功提示"
       customview:titleTextSize="17sp"
       customview:titleTextColor="@color/pasc_primary_text"
       customview:descText="提示附加说明"
       customview:descTextSize="15sp"
       customview:descTextColor="@color/pasc_explain_text"
       >
    </com.pasc.lib.widget.feedback.FeedbackView>

    </LinearLayout>
</ScrollView>
