<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/tell_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打电话" />
        <Button
            android:id="@+id/startdialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="开启权限对话框" />

        <Button
            android:id="@+id/more_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="异常提示" />

        <Button
            android:id="@+id/isconfirmdialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="确认对话框--只显示标题" />

        <Button
            android:id="@+id/isconfirmdialog1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="确认对话框--只显示文本" />

        <Button
            android:id="@+id/tipsconfirmdialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认提示对话框" />

        <Button
            android:id="@+id/tipsconfirmdialog1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认提示对话框1" />

        <Button
            android:id="@+id/location_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="ios天气弹窗" />

        <Button
        android:id="@+id/authority_management_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="权限管理专用弹出框" />

        <Button
            android:id="@+id/all_attribute_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="对话框所有属性" />

        <Button
            android:id="@+id/custom_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="自定义" />

        <Button
            android:id="@+id/list_Choice_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="列表选择弹出框" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.默认有确定和取消按钮。setHideCloseButton(true)
            隐藏左边按钮，调用 setHideConfirmButton(true)隐藏右边按钮" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.设置图标则显示图标。不设置则不显示" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.设置标题则显示标题。不设置则不显示" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.设置内容则显示内容。不设置则不显示" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.设置勾选框则显示勾选框。不设置则不显示" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.确定取消回调 setOnConfirmListener 和 setOnCloseListener" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.带勾选框的界面。回调 setOnConfirmChoiceStateListener" />


    </LinearLayout>
</ScrollView>
