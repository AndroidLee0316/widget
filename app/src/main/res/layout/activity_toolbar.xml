<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".widget.toolbar.ToolbarActivity"
    android:orientation="vertical"
    >
  <com.pasc.lib.widget.toolbar.PascToolbar
      android:id="@+id/toolbar"
      android:background="@drawable/bg_toolbar"
      style="@style/WhiteFontToolbar"
      app:title="标题"
      app:sub_title="副标题"
      app:support_translucent_status_bar="true"
      />
  <com.pasc.lib.widget.toolbar.PascToolbar
      android:id="@+id/toolbar1"
      android:visibility="gone"
      style="@style/BlackFontToolbar"
      app:title="标题"
      />
  <com.pasc.lib.widget.toolbar.PascToolbar
      android:id="@+id/toolbar2"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      app:title="标题"
      app:title_text_color="@color/authority_desc_Color"
      app:back_icon="@drawable/ic_back_black"
      app:close_icon="@drawable/nav_close"
      app:action_text="操作"
      app:action_icon="@drawable/ic_nav_share"

      />

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="测试edit"
      />
</LinearLayout>