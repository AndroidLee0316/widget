<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/button_normal_toast_wo_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="普通信息没有图标" />

        <Button
            android:id="@+id/button_normal_toast_w_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="普通信息带图标(成功)" />

        <Button
            android:id="@+id/button_normal_toast_w_icon_fail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="普通信息带图标(失败)" />

        <Button
            android:id="@+id/two_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多行文本" />

        <Button
            android:id="@+id/button_info_toast_with_formatting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="带格式的信息" />

        <Button
            android:id="@+id/button_error_toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="错误信息" />

        <Button
            android:id="@+id/button_success_toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="成功信息" />

        <Button
            android:id="@+id/button_info_toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="提示信息" />

        <Button
            android:id="@+id/button_warning_toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="警告信息" />

    </LinearLayout>
</ScrollView>
