<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/top_ategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onBtn1Click"
            android:text="一级分类"/>

        <Button
            android:id="@+id/secondary_classification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onBtn2Click"
            android:text="二级分类"/>


        <com.pasc.lib.widget.catalog.PascCatalogSelectView
            android:id="@+id/PascCatalogSelectView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="50dp"
            android:textSize="15sp"
            app:cs_bg_color_item_normal="#ffffff"
            app:cs_bg_color_item_selected="#f4f4f4"
            app:cs_item_height="45dp"
            app:cs_left_width="132dp"
            app:cs_normal_text_color="#333333"
            app:cs_selected_text_color="#2AA6FA"/>
    </LinearLayout>
</ScrollView>
