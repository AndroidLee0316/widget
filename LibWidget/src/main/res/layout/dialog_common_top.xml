<?xml version="1.0" encoding="utf-8"?>
<com.pasc.lib.widget.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/rll_dialog">

    <com.pasc.lib.widget.roundview.RoundTextView
        android:layout_marginTop="44dp"
        android:id="@+id/tv_button1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:rv_backgroundColor="#ffffff"
        android:gravity="center"
        android:text="@string/widget_btn_ok"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:id="@+id/v_divider2"
        android:layout_width="match_parent"
        android:background="#d5d5d5"
        android:layout_height="0.5dp" />

    <com.pasc.lib.widget.roundview.RoundTextView
        android:id="@+id/tv_button2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:rv_backgroundColor="#ffffff"
        android:gravity="center"
        android:text="@string/widget_btn_ok"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:id="@+id/v_divider3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="#d5d5d5"
        android:layout_height="0.5dp" />

    <com.pasc.lib.widget.roundview.RoundTextView
        android:visibility="gone"
        android:id="@+id/tv_button3"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        app:rv_backgroundColor="#ffffff"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="#333333"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b2000000" />

</com.pasc.lib.widget.roundview.RoundLinearLayout>