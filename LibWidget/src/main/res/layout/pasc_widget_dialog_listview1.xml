<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_choice_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/widget_choice_dialog_title_default"
            android:textColor="#333333"
            android:textSize="18sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/widget_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/widget_confirm_tv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/selector_primary_button"
            android:gravity="center"
            android:foreground="@drawable/fg_clickable"
            android:text="@string/widget_btn_ok"
            android:textColor="#FFFFFF"
            android:textSize="17sp"/>
    </LinearLayout>

</FrameLayout>