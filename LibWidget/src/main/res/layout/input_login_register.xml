<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:orientation="vertical"
    >
    <EditText
        android:id="@+id/edit_user"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/pasc_primary_text"
        android:hint="请输入手机号码"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_verification"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:background="@null"
            android:text="123456"
            />
        <TextView
            android:id="@+id/verification_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:textColor="@color/pasc_primary"
            android:foreground="@drawable/fg_clickable"
            android:text="获取验证码"
            android:textSize="16dp"
            android:gravity="center"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        />

    <TextView
        android:id="@+id/login_register_bt"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:background="@drawable/input_button_bg"
        android:foreground="@drawable/fg_clickable"
        android:text="登陆"
        android:textSize="17sp"
        android:gravity="center"
        />
</LinearLayout>
