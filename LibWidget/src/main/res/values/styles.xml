<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PascRootTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- 主题样式 -->
    <style name="PascTheme" parent="PascRootTheme">

        <!--***************PascTabLayout****************-->
        <item name="tl_sign_count_view">@style/pasc_tl_sign_count_view</item>
        <item name="tl_sign_count_view_minSize">@dimen/tl_sign_count_view_minSize</item>
        <item name="tl_sign_count_view_minSize_with_text">
