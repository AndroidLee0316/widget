<?xml version="1.0" encoding="utf-8"?>
<resources>
  <attr format="reference" name="back_icon"/>
  <attr format="reference" name="close_icon"/>
  <attr format="reference" name="action_icon"/>
  <attr format="boolean" name="enable_under_divider"/>
  <attr format="color" name="under_divider_color"/>
  <attr format="dimension" name="under_divider_height"/>
  <attr format="boolean" name="support_translucent_status_bar"/>
  <attr format="dimension" name="menu_text_size"/>
  <attr format="color" name="menu_text_color"/>

  <declare-styleable name="PascToolbar">
    <attr format="string" name="title"/>
    <attr format="string" name="sub_title"/>
    <attr format="dimension" name="title_text_size"/>
    <attr format="color" name="title_text_color"/>
    <attr format="dimension" name="sub_title_text_size"/>
    <attr format="color" name="sub_title_text_color"/>
    <attr name="menu_text_size"/>
    <attr name="menu_text_color"/>
    <attr name="back_icon"/>
    <attr name="close_icon"/>
    <attr name="action_icon"/>
    <attr format="string" name="action_text"/>
    <attr name="enable_under_divider"/>
    <attr name="under_divider_color"/>
    <attr name="under_divider_height"/>
    <attr name="support_translucent_status_bar"/>
    <attr name="android:height"/>
  </declare-styleable>

  <declare-styleable name="PascSearchBar">
    <attr name="android:height"/>
    <attr name="android:textSize"/>
    <attr name="android:textColor"/>
    <attr name="android:hint"/>
    <attr name="android:textColorHint"/>
    <attr name="menu_text_size"/>
    <attr name="menu_text_color"/>
    <attr name="back_icon"/>
    <attr name="enable_under_divider"/>
    <attr name="under_divider_color"/>
    <attr name="under_divider_height"/>
    <attr name="support_translucent_status_bar"/>
    <attr name="search_content" format="string"/>
    <attr name="mode" format="enum">
      <enum name="edit_model" value="0"/>
      <enum name="clickable_model" value="1"/>
    </attr>
    <attr name="enable_close_button" format="boolean"/>
  </declare-styleable>
</resources>