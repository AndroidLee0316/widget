<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <stroke android:width="1dp" android:color="#E0E0E0"></stroke>
            <solid android:color="@color/secondary_button_background_pressed_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="0.5dp" android:color="#E0E0E0"></stroke>
            <corners android:radius="3dp"/>
            <solid android:color="@color/secondary_button_background_color" />
        </shape>
    </item>
</selector>